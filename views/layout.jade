doctype html
html
    head
        meta(charset='utf8')
        base(href='/')
        title subs
        link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
        //- link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')

        meta(name='viewport', content='width=device-width, initial-scale=1.0')
    body
        .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
            .navbar-header
                button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/") subs

            .collapse.navbar-collapse.navbar-ex1-collapse
                ul.nav.navbar-nav
                    - if (locals.user)
                        li
                            a(href="/doc/create") create translation
                ul.nav.navbar-nav.pull-right
                    - if (locals.user)
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown', onClick='return false;')
                                | #{locals.user.username} 
                                b.caret
                            ul.dropdown-menu(role='menu')
                                li
                                    a.menuitem(href='/user/#{locals.user.login}') profile
                                li
                                    a.menuitem(href='/settings') settings
                                li
                                    a.menuitem(href='/logout') log out
                    - else
                        li
                            a.navbar-link(href='/login') log in
                        li
                            a.navbar-link(href='/register') register
                    

        .container
            block container-wrapper
                block container
                block side-panel

        block scripts
            script(src='/lib/jquery/dist/jquery.min.js')
            script(src='/lib/bootstrap/dist/js/bootstrap.min.js')
